{
    "name": "@elastic/search-app-client",
    "version": "1.0.0",
    "description": "A Search Application Client for Elasticsearch",
    "license": "Apache-2.0",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "format": "prettier --ignore-unknown --ignore-path .gitignore .",
        "format:write": "yarn format --write",
        "lint": "eslint --ext *.ts,*.tsx,*.js,*.jsx --ignore-pattern '**/node_modules/**' --ignore-pattern '**/lib/**'",
        "test-ci": "jest --runInBand",
        "test": "jest",
        "clean": "rimraf lib",
        "build": "tsc",
        "watch": "tsc --watch",
        "prepare": "husky install",
        "prepublish": "yarn build"
    },
    "devDependencies": {
        "@types/jest": "^29.5.1",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-jest": "^27.2.1",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "yarn lint",
        "**/*": "yarn format"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}
